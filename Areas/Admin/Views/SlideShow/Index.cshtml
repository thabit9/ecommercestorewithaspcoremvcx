@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    SlideShow List
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
        <div class="box-header">
            <h3 class="box-title">SlideShow Listing</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var slideShow in ViewBag.SlideShows)
                {
                    <tr>
                        <td>@slideShow.Id</td>
                        <td>@slideShow.Name</td>
                        <td>
                            <img src="~/SlideShows/@slideShow.Photo" width="120" />
                            <p class="text-muted">@slideShow.Photo</p>
                        </td>
                        <td>@slideShow.Title</td>
                        <td>@slideShow.Description</td>
                        <td>@(slideShow.Status ? "Show" : "Hide")</td>
                        <td>
                            <a asp-area="admin" asp-controller="slideshow" asp-action="edit" asp-route-id="@slideShow.Id">Edit</a> <span>|</span>
                            <a asp-area="admin" asp-controller="slideshow" asp-action="delete" asp-route-id="@slideShow.Id" onclick="return confirm('Are you sure you want to delete this SlideShow?')">Delete</a>
                           
                        </td>
                    </tr> 
                }
            </tbody>
            <tfoot>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->