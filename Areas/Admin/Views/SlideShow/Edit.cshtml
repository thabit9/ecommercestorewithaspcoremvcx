@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model ecommercestorewithaspcoremvc.Models.SlideShow

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    Edit SlideShow
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">SlideShow Information</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <span class="text-green">@ViewBag.msg</span>
        <form method="post" asp-area="admin" asp-controller="slideshow" asp-action="edit" enctype="multipart/form-data" role="form">
          <div class="box-body">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" placeholder="SlideShow Name" required asp-for="Name" />
            </div>
            
            <div class="form-group">
              <label for="photo">SlideShow Banner</label>
              <input type="file" class="form-control" name="photo" accept="image/*"/>
              <br />
              <img src="~/SlideShows/@Model.Photo" width="120" />
            </div>

            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" placeholder="SlideShow Name" asp-for="Title" />
            </div>

            <div class="form-group">
              <label>Description</label>
              <textarea class="form-control" rows="3" placeholder="Enter Description" asp-for="Description"></textarea>
            </div>

            <div class="checkbox">
              <label>
                <input type="checkbox" asp-for="Status"> Status
              </label>
            </div>

          </div>
          <!-- /.box-body -->

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <input type="hidden" asp-for="Id" />
          </div>
        </form>
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->